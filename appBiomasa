    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Variables globales
        let regresionData = {
            pendiente: 0.0345,
            intercepto: -0.0267
        };

        let chartCalibracion = null;
        let chartSalud = null;

        // Inicializar gr√°ficos
        window.onload = function () {
            initCharts();
        };

        function initCharts() {
            const ctxCal = document.getElementById('curvaCalibracion').getContext('2d');
            chartCalibracion = new Chart(ctxCal, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Patrones',
                        data: [
                            { x: 1.25, y: 0.041 },
                            { x: 2.5, y: 0.025 },
                            { x: 5, y: 0.106 },
                            { x: 10, y: 0.35 },
                            { x: 12.5, y: 0.395 },
                            { x: 25, y: 0.886 }
                        ],
                        backgroundColor: '#2e7d5e',
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }, {
                        label: 'L√≠nea de Regresi√≥n',
                        data: [],
                        type: 'line',
                        borderColor: '#ff6b6b',
                        borderWidth: 2,
                        pointRadius: 0,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    return `Conc: ${context.parsed.x} mg, Abs: ${context.parsed.y.toFixed(3)}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Concentraci√≥n (mg C)'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Absorbancia'
                            }
                        }
                    }
                }
            });

            const ctxSalud = document.getElementById('indicadoresSalud').getContext('2d');
            chartSalud = new Chart(ctxSalud, {
                type: 'radar',
                data: {
                    labels: ['Evoluci√≥n CO2', 'Biomasa', '% Carbono', '% MO', 'Actividad'],
                    datasets: [{
                        label: 'Nivel Actual',
                        data: [0, 0, 0, 0, 0],
                        backgroundColor: 'rgba(46, 125, 94, 0.2)',
                        borderColor: '#2e7d5e',
                        borderWidth: 2,
                        pointBackgroundColor: '#2e7d5e'
                    }, {
                        label: '√ìptimo',
                        data: [40, 40, 5, 8, 100],
                        backgroundColor: 'rgba(46, 125, 94, 0.1)',
                        borderColor: 'rgba(46, 125, 94, 0.3)',
                        borderWidth: 1,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }

        // Funci√≥n para calcular %PS
        function calcularPS() {
            const bandeja = parseFloat(document.getElementById('pesoBandeja').value) || 0;
            const humedo = parseFloat(document.getElementById('pesoHumedo').value) || 0;
            const seco = parseFloat(document.getElementById('pesoSeco').value) || 0;

            const pesoHumedo = humedo - bandeja;
            const pesoSeco = seco - bandeja;
            const pps = (pesoSeco / pesoHumedo) * 100;

            return {
                pesoHumedo,
                pesoSeco,
                pps
            };
        }

        // Calcular Evoluci√≥n CO2
        function calcularCO2() {
            const hclBlanco = parseFloat(document.getElementById('hclBlanco').value) || 19.7;
            const hclMuestra = parseFloat(document.getElementById('hclMuestra').value) || 14.2;
            const pesoHumedoSuelo = parseFloat(document.getElementById('pesoSueloHumedo').value) || 30;

            const datosPS = calcularPS();
            const pps = datosPS.pps;

            // F√≥rmula: ((Blanco - Muestra) * 2.2 * 100 * 100) / (168 * pesoHumedoSuelo * (%PS/100))
            const co2 = ((hclBlanco - hclMuestra) * 2.2 * 100 * 100) / (168 * pesoHumedoSuelo * (pps / 100));

            document.getElementById('resultadoCO2').style.display = 'block';
            document.getElementById('valorCO2').innerHTML = co2.toFixed(2);
            document.getElementById('mgCO2Input').value = co2.toFixed(2);

            // Diagn√≥stico
            let diagnostico = '';
            let color = '';
            if (co2 > 40) {
                diagnostico = '‚úÖ SALUDABLE: Alta actividad biol√≥gica. Suelo con excelente respiraci√≥n.';
                color = '#6bcf7f';
            } else if (co2 >= 20) {
                diagnostico = 'üü° MODERADO: Suelo con intervenci√≥n, actividad biol√≥gica media.';
                color = '#ffd93d';
            } else if (co2 >= 10) {
                diagnostico = 'üü† DEGRADADO: Baja actividad por uso de pesticidas o manejo intensivo.';
                color = '#ff9f43';
            } else {
                diagnostico = 'üî¥ CR√çTICO: Toxicidad por hidrocarburos o inhibici√≥n microbiana.';
                color = '#ff6b6b';
            }

            document.getElementById('diagnosticoCO2').innerHTML = diagnostico;
            document.getElementById('diagnosticoCO2').style.background = color + '20';
            document.getElementById('diagnosticoCO2').style.color = '#1e3b3a';

            actualizarGraficosSalud();
            actualizarConclusion();

            return co2;
        }

        // Calcular Biomasa
        function calcularBiomasa() {
            const mgCO2 = parseFloat(document.getElementById('mgCO2Input').value) || 0;
            const coeficiente = parseFloat(document.getElementById('coeficienteBiomasa').value) || 20.6;

            const biomasa = mgCO2 * coeficiente;

            document.getElementById('resultadoBiomasa').style.display = 'block';
            document.getElementById('valorBiomasa').innerHTML = biomasa.toFixed(2);

            let diagnostico = '';
            let color = '';
            if (biomasa > 800) {
                diagnostico = '‚úÖ EXCELENTE: Alta biomasa microbiana, suelo saludable.';
                color = '#6bcf7f';
            } else if (biomasa >= 400) {
                diagnostico = 'üü° MEDIA: Biomasa moderada, degradaci√≥n controlada.';
                color = '#ffd93d';
            } else {
                diagnostico = 'üî¥ BAJA: Suelo impactado/t√≥xico, biomasa cr√≠tica.';
                color = '#ff6b6b';
            }

            document.getElementById('diagnosticoBiomasa').innerHTML = diagnostico;
            document.getElementById('diagnosticoBiomasa').style.background = color + '20';

            actualizarGraficosSalud();
            actualizarConclusion();

            return biomasa;
        }

        // Calcular regresi√≥n lineal
        function calcularRegresion() {
            const concentraciones = [
                parseFloat(document.getElementById('conc1').value) || 1.25,
                parseFloat(document.getElementById('conc2').value) || 2.5,
                parseFloat(document.getElementById('conc3').value) || 5,
                parseFloat(document.getElementById('conc4').value) || 10,
                parseFloat(document.getElementById('conc5').value) || 12.5,
                parseFloat(document.getElementById('conc6').value) || 25
            ];

            const absorbancias = [
                parseFloat(document.getElementById('abs1').value) || 0.041,
                parseFloat(document.getElementById('abs2').value) || 0.025,
                parseFloat(document.getElementById('abs3').value) || 0.106,
                parseFloat(document.getElementById('abs4').value) || 0.35,
                parseFloat(document.getElementById('abs5').value) || 0.395,
                parseFloat(document.getElementById('abs6').value) || 0.886
            ];

            // Calcular regresi√≥n lineal
            let sumX = 0, sumY = 0, sumXY = 0, sumX2 = 0;
            const n = concentraciones.length;

            for (let i = 0; i < n; i++) {
                sumX += concentraciones[i];
                sumY += absorbancias[i];
                sumXY += concentraciones[i] * absorbancias[i];
                sumX2 += concentraciones[i] * concentraciones[i];
            }

            const pendiente = (n * sumXY - sumX * sumY) / (n * sumX2 - sumX * sumX);
            const intercepto = (sumY - pendiente * sumX) / n;

            regresionData = {
                pendiente: pendiente,
                intercepto: intercepto
            };

            document.getElementById('pendienteValor').innerHTML = pendiente.toFixed(4);
            document.getElementById('interceptoValor').innerHTML = intercepto.toFixed(4);

            // Actualizar gr√°fico
            const puntosRegresion = [];
            for (let x = 0; x <= 30; x += 1) {
                puntosRegresion.push({ x: x, y: pendiente * x + intercepto });
            }

            chartCalibracion.data.datasets[0].data = concentraciones.map((x, i) => ({ x: x, y: absorbancias[i] }));
            chartCalibracion.data.datasets[1].data = puntosRegresion;
            chartCalibracion.update();

            return { pendiente, intercepto };
        }

        // Calcular Lc y % Carbono
        function calcularCarbono() {
            if (!regresionData.pendiente) {
                calcularRegresion();
            }

            const absorbancia = parseFloat(document.getElementById('absorbanciaMuestra').value) || 0.468;
            const pesoMuestra = parseFloat(document.getElementById('pesoMuestra').value) || 100;

            // Lc = (Absorbancia - intercepto) / pendiente
            const lc = (absorbancia - regresionData.intercepto) / regresionData.pendiente;
            const porcentajeC = (lc / pesoMuestra) * 100;

            document.getElementById('resultadoCarbono').style.display = 'block';
            document.getElementById('valorLc').innerHTML = lc.toFixed(2);
            document.getElementById('valorPorcentajeC').innerHTML = porcentajeC.toFixed(2);
            document.getElementById('porcentajeCInput').value = porcentajeC.toFixed(2);

            // Diagn√≥stico
            let diagnostico = '';
            let color = '';
            if (porcentajeC > 10) {
                diagnostico = 'üíé EXCEPCIONAL: Suelo con alt√≠sima acumulaci√≥n de materia org√°nica.';
                color = '#6bcf7f';
            } else if (porcentajeC >= 5) {
                diagnostico = 'üü¢ ALTO: Excelente contenido de carbono.';
                color = '#6bcf7f';
            } else if (porcentajeC >= 2) {
                diagnostico = 'üü° MEDIO: Suelo productivo, requiere mantenimiento.';
                color = '#ffd93d';
            } else {
                diagnostico = 'üü† BAJO: Suelo mineralizado o erosionado.';
                color = '#ff9f43';
            }

            document.getElementById('diagnosticoCarbono').innerHTML = diagnostico;
            document.getElementById('diagnosticoCarbono').style.background = color + '20';

            actualizarGraficosSalud();
            actualizarConclusion();

            return { lc, porcentajeC };
        }

        // Calcular % MO
        function calcularMO() {
            const porcentajeC = parseFloat(document.getElementById('porcentajeCInput').value) || 0;
            const factorVB = parseFloat(document.getElementById('factorVB').value) || 1.724;

            const mo = porcentajeC * factorVB;

            document.getElementById('resultadoMO').style.display = 'block';
            document.getElementById('valorMO').innerHTML = mo.toFixed(2);

            let diagnostico = '';
            let color = '';
            if (mo > 5) {
                diagnostico = 'üü¢ MUY RICO: Exceso de reservas org√°nicas.';
                color = '#6bcf7f';
            } else if (mo >= 3) {
                diagnostico = 'üü¢ ALTO: Nivel ideal para agricultura sostenible.';
                color = '#6bcf7f';
            } else if (mo >= 1.5) {
                diagnostico = 'üü° MEDIO: Requiere incorporaci√≥n de abono.';
                color = '#ffd93d';
            } else {
                diagnostico = 'üî¥ POBRE: Suelo est√©ril, estructura colapsada.';
                color = '#ff6b6b';
            }

            document.getElementById('diagnosticoMO').innerHTML = diagnostico;
            document.getElementById('diagnosticoMO').style.background = color + '20';

            actualizarGraficosSalud();
            actualizarConclusion();

            return mo;
        }

        // Actualizar gr√°ficos de salud
        function actualizarGraficosSalud() {
            const co2 = parseFloat(document.getElementById('valorCO2')?.innerHTML) || 0;
            const biomasa = (parseFloat(document.getElementById('valorBiomasa')?.innerHTML) || 0) / 20; // Escalar
            const pC = parseFloat(document.getElementById('valorPorcentajeC')?.innerHTML) || 0;
            const mo = parseFloat(document.getElementById('valorMO')?.innerHTML) || 0;

            // Normalizar valores a escala 0-100
            const co2Norm = Math.min(100, (co2 / 50) * 100);
            const biomasaNorm = Math.min(100, biomasa);
            const pCNorm = Math.min(100, (pC / 15) * 100);
            const moNorm = Math.min(100, (mo / 10) * 100);
            const actividadNorm = (co2Norm + biomasaNorm + pCNorm + moNorm) / 4;

            chartSalud.data.datasets[0].data = [
                co2Norm || 0,
                biomasaNorm || 0,
                pCNorm || 0,
                moNorm || 0,
                actividadNorm || 0
            ];
            chartSalud.update();

            // Actualizar barra de salud
            document.getElementById('healthBarFill').style.width = actividadNorm + '%';
            document.getElementById('healthScore').innerHTML = Math.round(actividadNorm) + '%';
        }

        // Actualizar conclusi√≥n general
        function actualizarConclusion() {
            const co2 = parseFloat(document.getElementById('valorCO2')?.innerHTML) || 0;
            const biomasa = parseFloat(document.getElementById('valorBiomasa')?.innerHTML) || 0;
            const pC = parseFloat(document.getElementById('valorPorcentajeC')?.innerHTML) || 0;
            const mo = parseFloat(document.getElementById('valorMO')?.innerHTML) || 0;

            let conclusion = '';

            if (pC > 5 && co2 < 10) {
                conclusion = 'üö® ALERTA CR√çTICA: El suelo tiene mucho carbono pero los microbios no respiran. Esto confirma TOXICIDAD por hidrocarburos o inhibidores qu√≠micos. Se requiere an√°lisis de contaminantes y biorremediaci√≥n.';
            } else if (pC < 2 && co2 < 10) {
                conclusion = 'üìâ AGOTAMIENTO: Baja biomasa debido a que el suelo no tiene alimento (%C pobre). Recomendaci√≥n: Incorporar materia org√°nica (compost, abonos verdes) y rotaci√≥n de cultivos.';
            } else if (mo > 5 && biomasa > 800) {
                conclusion = '‚úÖ EQUILIBRIO √ìPTIMO: La actividad biol√≥gica es coherente con las reservas de carbono. Suelo saludable con alta capacidad productiva. Mantener pr√°cticas sostenibles.';
            } else if (mo < 1.5 && co2 < 20) {
                conclusion = '‚ö†Ô∏è DEGRADACI√ìN SEVERA: Suelo mineralizado con baja actividad biol√≥gica. Implementar urgentemente pr√°cticas de regeneraci√≥n y agregar enmiendas org√°nicas.';
            } else {
                conclusion = 'üå± CONDICI√ìN MODERADA: El suelo muestra signos de recuperaci√≥n o manejo sostenible. Continuar con monitoreo y ajustar pr√°cticas agr√≠colas seg√∫n necesidad.';
            }

            document.getElementById('conclusionTexto').innerHTML = conclusion;
        }
    </script>
